<UserControl x:Class="ctrlSummaryBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" x:Name="rowTopMargin"/>
      <RowDefinition Height="1*" x:Name="rowBar"/>
      <RowDefinition Height="1" x:Name="rowBaseline"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition x:Name="colLeftMargin"/>
      <ColumnDefinition x:Name="colBar"/>
      <ColumnDefinition x:Name="colRightMargin"/>
    </Grid.ColumnDefinitions>
    <Rectangle x:Name="rectBar" Fill="Pink" Grid.Row="1" Grid.Column="1"/>
  </Grid>

  <Rectangle Height="1" x:Name="rectBaseline" Fill="blue" Grid.ColumnSpan="3" VerticalAlignment="Bottom"/>
    <Rectangle Stroke="Blue" StrokeThickness="1" x:Name="rectGraphSelected" Grid.ColumnSpan="3" Grid.RowSpan="3" Visibility="Collapsed" />
  </Grid>
</UserControl>
