<UserControl x:Class="ctrlHero_Tooltip"
              xmlns:DotaMasterWPF="clr-namespace:DotaMasterWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid x:Name="LayoutRoot" Background="#FF2B2B2B" MaxWidth="250" Margin="0">
    <Rectangle Stroke="#FFD9D9D9" StrokeThickness="1" Margin="5">


    </Rectangle>
    <StackPanel Margin="5" >

      <Label x:Name="lblItemName" Content="Keeper of the Light" Foreground="#FFD9D9D9" FontSize="12" Padding="0" Margin="5" />


      <StackPanel x:Name="spnlModifiers">


      </StackPanel>

      <Label x:Name="lblBuildsFrom" Content="Builds From" Foreground="#FF6E6E6E"  FontSize="10" Padding="0" Margin="5" />
      <StackPanel x:Name="spnlBuildsFrom">

      </StackPanel>

      <Label  Content="Builds To" x:Name="lblBuildsTo" Foreground="#FF6E6E6E"  FontSize="10" Padding="0" Margin="5" />
      <StackPanel x:Name="spnlBuildsTo">

      </StackPanel>


      <StackPanel x:Name="spnlDescription">

      </StackPanel>
    </StackPanel>

  </Grid>
</UserControl>
