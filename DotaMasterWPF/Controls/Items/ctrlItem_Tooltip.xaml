<UserControl x:Class="ctrlItem_Tooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid x:Name="LayoutRoot" Background="#FF2B2B2B" Width="200" Margin="0">
    <Rectangle Stroke="#FFD9D9D9" StrokeThickness="1" Margin="5">


    </Rectangle>
    <StackPanel Margin="5" >

      <Label x:Name="lblItemName" Content="Keeper of the Light" Foreground="#FFD9D9D9" FontSize="12" Padding="0" Margin="5" />


      <StackPanel x:Name="spnlModifiers">


      </StackPanel>

      <Label x:Name="lblBuildsFrom" Content="Builds From" Foreground="#FF6E6E6E"  FontSize="10" Padding="0" Margin="5" />
      <StackPanel x:Name="spnlBuildsFrom" HorizontalAlignment="Left" >

      </StackPanel>

      <Label x:Name="lblBuildsTo" Content="Builds To" Foreground="#FF6E6E6E"  FontSize="10" Padding="0" Margin="5" />
      <StackPanel x:Name="spnlBuildsTo" HorizontalAlignment="Left">
      </StackPanel>


      <StackPanel x:Name="spnlDescription">

      </StackPanel>
    </StackPanel>

  </Grid>

</UserControl>
